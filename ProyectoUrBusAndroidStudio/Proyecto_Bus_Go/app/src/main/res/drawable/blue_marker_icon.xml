<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Marcador redondo -->
    <item android:top="20dp" android:right="5dp" android:bottom="16dp" android:left="5dp">
        <shape android:shape="oval">
            <solid android:color="#EC1C54" /> <!-- Rojo oscuro -->
            <size android:width="4dp" android:height="10dp" />
        </shape>
    </item>
    <!-- Puntero -->
    <item android:bottom="14dp" android:left="12dp" android:right="12dp" android:top="40dp">
        <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#EC1C54" /> <!-- Rojo oscuro -->
                <size android:width="7dp" android:height="7dp" />
            </shape>
        </rotate>
    </item>
    <!-- CÃ­rculo blanco en el centro -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Blanco -->
            <size android:width="10dp" android:height="10dp" />
        </shape>
    </item>
</layer-list>


